@model IEnumerable<WebAppSecond.Models.Tuotteet>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Luo uusi tuote", "Create")
</p>

        <div class="container-fluid">
            <h2>Tuotteet</h2>
            <h5>Tuotteita on @Model.Count() kappaletta</h5>
            <div class="row">
                @foreach (WebAppSecond.Models.Tuotteet tuote in Model)
                {
                    <div class="col-lg-3">
                        <div class="card mb-3">
                            <h3 class="card-header">@tuote.Nimi</h3>
                            <div class="card-body">
                                <h5 class="card-title">@tuote.TuoteID</h5>
                                @*<h6 class="card-subtitle text-muted">@prod.UnitsInStock</h6>*@
                            </div>
                            <img style="height: 50%; width: 50%; display: block;" alt="Card image" src="@tuote.Kuvalinkki" alt="@tuote.Kuvalinkki">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Hinta:  @tuote.Ahinta</li>
                            </ul>
                            <div class="card-body">
                                @Html.ActionLink("Muokkaa", "Edit", new { id = tuote.TuoteID })
                                @Html.ActionLink("Poista", "Delete", new { id = tuote.TuoteID })
                            </div>
                            <div class="card-footer text-muted">
                                2 days ago
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

</table>
